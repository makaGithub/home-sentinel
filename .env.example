# ============================================
# Конфигурация приложения (vision_bridge)
# ============================================

# URL видео потока (0 для веб-камеры, или URL для RTSP/HTTP потока)
VIDEO_URL=0

# Модель YOLO для детекции объектов
YOLO_MODEL=yolov8n.pt

# Устройство для YOLO (cuda, cpu, или номер GPU)
YOLO_DEVICE=cuda

# Модель InsightFace для распознавания лиц (только antelopev2 для совместимости с Immich)
INSIGHTFACE_MODEL=antelopev2

# Порог схожести лиц для распознавания (0.0 - 1.0)
FACE_SIM_THRESHOLD=0.5

# Минимальное количество кадров для стабильного объекта
MIN_STABLE=10

# Максимальное количество кадров отсутствия объекта перед удалением
MAX_MISSING=30

# ============================================
# Конфигурация базы данных Immich
# ============================================

# Хост базы данных PostgreSQL
IMMICH_DB_HOST=immich_postgres

# Порт базы данных
IMMICH_DB_PORT=5432

# Имя базы данных
IMMICH_DB_NAME=immich

# Пользователь базы данных
IMMICH_DB_USER=postgres

# Пароль базы данных (ЗАМЕНИТЕ НА РЕАЛЬНЫЙ!)
IMMICH_DB_PASSWORD=your_password_here

# ============================================
# Конфигурация деплоя на удаленный хост
# ============================================

# IP адрес или доменное имя удаленного хоста
REMOTE_HOST=your-gpu-server.com

# Пользователь для SSH подключения
REMOTE_USER=your_username

# Путь к проекту на удаленном хосте
REMOTE_PATH=/srv/ha-ai-stack

# Метод синхронизации: git или rsync
# git - через git push/pull (требует настройки git на удаленном хосте)
# rsync - прямая синхронизация файлов (быстрее для разработки)
DEPLOY_METHOD=rsync

# Копировать .env файл на удаленный хост при деплое?
COPY_ENV=true

# Настраивать Docker на удаленном хосте при первом деплое?
SETUP_DOCKER=false

# Собирать Docker образы на удаленном хосте?
BUILD_REMOTE=true

# Перезапускать сервисы после деплоя?
RESTART_SERVICES=true

# Останавливать сервисы перед обновлением?
STOP_BEFORE_UPDATE=true

# Дополнительные опции SSH (если нужны)
# Пример: SSH_OPTS="-i ~/.ssh/id_rsa -p 22"
# SSH_OPTS=
